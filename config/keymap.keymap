    behaviors {
        tap_dance_mouse: tap_dance_mouse {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_MOUSE";
            #binding-cells = <0>;
            bindings = <&kp MINUS>, <&to 1>;
        };

        up_uscore: up_uscore {
            compatible = "zmk,behavior-mod-morph";
            label = "UP_USCORE";
            #binding-cells = <0>;
            bindings = <&kp UP>, <&kp JUS>;

            // 左シフト(MOD_LSFT)のみを対象に設定

            mods = <(MOD_LSFT)>;
        };

        up_morph_shift: up_morph_shift {
            compatible = "zmk,behavior-hold-tap";
            label = "UP_MORPH_SHIFT";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>; // 長押し判定の時間（お好みで調整）
            bindings = <&kp>, <&up_uscore>;

            // ホールドで&kp、タップでup_uscore
        };
    };

    macros {
        kp1: kp1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LBKT &kp C &kp U &kp E &kp INT1 &kp H &kp A &kp K &kp U &kp M &kp A &kp I>;
