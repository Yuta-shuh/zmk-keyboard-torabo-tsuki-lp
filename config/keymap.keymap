            #binding-cells = <0>;
            bindings = <&none &kp LS(K) &kp A &kp Y &kp O &kp T &kp I &kp N>;
            label = "KP2";
        };

        en: en {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANG2 &to 7>;
            label = "EN";
        };

        ja: ja {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANG1 &to 0>;
            label = "JA";
        };
    };

